<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
  <title>ADMIN Panel</title>
  <!-- Bootstrap -->
  <link rel="stylesheet" href="/css/bootstrap.min.css" />
  <!-- Font Awesome Icon -->
  <link rel="stylesheet" href="/css/font-awesome.css">
  <!-- Custom stlylesheet -->
  <link rel="stylesheet" href="/css/style.css">


  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

  <%-typeof tabulatorCss=="undefined" ? "" : tabulatorCss%>
    <%-typeof summernoteCss=="undefined" ? "" : summernoteCss%>
</head>

<body>


  <nav class="navbar navbar-expand-lg bg-dark">
    <div class="container">
      <div class="d-flex align-items-center justify-content-between w-100">
          <div class="navbar-brand">
        <a href="/admin/dashboard" class="d-flex align-items-center gap-2">
          <img class="logo" src="/uploads/<%=settings.website_image ? settings.website_image : " logo.png"%>" alt="Logo"
          style="height: 50px;width: 50px;">
          <span class="text-white fs-5 text-nowrap fw-bold">
            <%=settings.website_name ? settings.website_name : "Admin Panel" %>
          </span>
        </a>
      </div>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse justify-content-center" id="navbarSupportedContent">
        <ul class="navbar-nav gap-3">
          <li class="nav-item">
            <a class="nav-link px-4 py-1 rounded  <% if(req.url=="/dashboard") { %>  text-warning <% }else{ %> text-white <% } %>" href="/admin/dashboard">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link px-4 py-1 rounded  <% if(req.url=="/artcle") { %>  text-warning <% }else{ %> text-white <% } %>" href="/admin/artcle">Article</a>
          </li>
          <%if(role=="admin" ){%>
            <li class="nav-item">
              <a class="nav-link px-4 py-1 rounded  <% if(req.url=="/category") { %>  text-warning <% }else{ %> text-white <% } %>" href="/admin/category">Category</a>
            </li>
            <li class="nav-item">
              <a class="nav-link px-4 py-1 rounded  <% if(req.url=="/users") { %>  text-warning <% }else{ %> text-white <% } %>" href="/admin/users">Users</a>
            </li>
            <%}%>
              <li class="nav-item">
                <a class="nav-link px-4 py-1 rounded  <% if(req.url=="/comments") { %>  text-warning <% }else{ %> text-white <% } %>" href="/admin/comments">Comments</a>
              </li>
              <%if(role=="admin" ){%>
                <li class="nav-item">
                  <a class="nav-link px-4 py-1 rounded  <% if(req.url=="/settings") { %>  text-warning <% }else{ %> text-white <% } %>"
                      href="/admin/settings">Settings</a>
                </li>
                <%}%>
        </ul>
      </div>
           <div class="d-flex" role="search">
          <a href="/admin/logout" class="admin-logout btn btn-warning">
            <i class="fa fa-sign-out"></i> logout
          </a>
        </div>
      </div>
    </div>
  </nav>

  <!-- /Menu Bar -->
  <%-body %>
    <!-- Footer -->
    <div id="footer" style="background-color: #f2ece7;">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <span class="text-dark">
              <%=settings.website_description ? settings.website_description
                : "All rights reserved By Haresh Chaudhary &copy; 2025 " %>
            </span>
          </div>
        </div>
      </div>
    </div>
    <!-- /Footer -->
   
</body>

</html>