<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
  <title>ADMIN Panel</title>
  <!-- Bootstrap -->
  <link rel="stylesheet" href="/css/bootstrap.min.css" />
  <!-- Font Awesome Icon -->
  <link rel="stylesheet" href="/css/font-awesome.css">
  <!-- Custom stlylesheet -->
  <link rel="stylesheet" href="/css/style.css">
    <!-- Custom stlylesheet -->
  <link rel="stylesheet" href="/css/aside.css">

  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

  <%-typeof tabulatorCss=="undefined" ? "" : tabulatorCss%>
  <%-typeof summernoteCss=="undefined" ? "" : summernoteCss%>
</head>

<body>
  <!-- HEADER -->
  <div id="header-admin">
    <!-- container -->
    <div class="container">
      <!-- row -->
      <div class="row">
        <!-- LOGO -->
        <div class="col-md-2 me-auto d">
          <a href="/admin/dashboard" class="d-flex align-items-center gap-2">
            <img class="logo" src="/uploads/<%=settings.website_image ? settings.website_image : "logo.png"%>" alt="Logo" style="height: 50px;width: 50px;">
            <span class="text-white fs-5 text-nowrap fw-bold"><%=settings.website_name ? settings.website_name : "Admin Panel"%></span>
          </a>
        </div>
        <!-- /LOGO -->
        <!-- LOG-Out -->
        <div class="col-md-2">
          <a href="/admin/logout" class="admin-logout">
            <i class="fa fa-sign-out"></i> logout
          </a>
        </div>
        <!-- /LOG-Out -->
      </div>
    </div>
  </div>
  <!-- /HEADER -->
  <!-- Menu Bar -->
  <div id="admin-menubar">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <ul class="admin-menu">
            <li>
              <a href="/admin/dashboard">Home</a>
            </li>
            <li>
              <a href="/admin/artcle">Article</a>
            </li>
            <%if(role=="admin" ){%>
              <li>
                <a href="/admin/category">Category</a>
              </li>
              <li>
                <a href="/admin/users">Users</a>
              </li>
              <%}%>
                <li>
                  <a href="/admin/comments">Comments</a>
                </li>
                <%if(role=="admin" ){%>
                  <li>
                    <a href="/admin/settings">Settings</a>
                  </li>
                  <%}%>
          </ul>
        </div>
      </div>
    </div>
  </div>


  <!-- /Menu Bar -->
  <%-body %>
    <!-- Footer -->
    <div id="footer">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <span><%=settings.website_description ? settings.website_description : "All rights reserved By Haresh Chaudhary &copy; 2025 "%></span>
          </div>
        </div>
      </div>
    </div>
    <!-- /Footer -->
</body>

</html>